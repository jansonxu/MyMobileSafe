<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 负责显示查杀动画的容器控件-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/checkBeforeColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_scan_setting_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:onClick="aboutKillAction"
                android:src="@mipmap/weishi_setting" />

            <ImageView
                android:id="@+id/iv_return_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_scan_setting_id"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="aboutKillAction"
                android:src="@mipmap/weishi_return" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_scan_id"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_killing_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@mipmap/killing" />

            <ImageView
                android:id="@+id/iv_scan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="invisible"
                android:src="@drawable/scan" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_start_scan_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_scan_id"
            android:layout_centerHorizontal="true"
            android:onClick="aboutKillAction"
            android:text="快速扫描"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

    <!-- 占位的容器控件-->
    <FrameLayout
        android:id="@+id/fl_container_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />


</LinearLayout>
